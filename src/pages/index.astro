---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { dateRange } from "@lib/utils";
import { SITE, HOME, SOCIALS } from "@consts";

const projects = (await getCollection("projects"))
  .filter(project => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0,SITE.NUM_PROJECTS_ON_HOMEPAGE);

const allwork = (await getCollection("work"))
  .sort((a, b) => new Date(b.data.dateStart).valueOf() - new Date(a.data.dateStart).valueOf())
  .slice(0,SITE.NUM_WORKS_ON_HOMEPAGE);

const work = await Promise.all(
  allwork.map(async (item) => {
    const { Content } = await item.render();
    return { ...item, Content };
  })
);

const skills = await getCollection("skills");
const education = await getCollection("education");
const certifications = await getCollection("certifications");

// Group skills by category
const skillsByCategory = skills.reduce((acc, skill) => {
  if (!acc[skill.data.category]) {
    acc[skill.data.category] = [];
  }
  acc[skill.data.category].push(skill);
  return acc;
}, {} as Record<string, typeof skills>);
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <h4 class="animate-fade-up font-semibold text-black dark:text-white">
      Hi, I'm Van <span class="text-xl">üëãüèª</span> 
    </h4>
    <div class="space-y-16">
      <section class="animate-fade-up">
        <article class="space-y-4">
          <p>
            I'm a recent Computer Science graduate with a Bachelor's degree in Digital Systems Security from the University of Wollongong and a Diploma in Information Technology from the Singapore Institute of Management. Passionate about cybersecurity and software development, I'm driven to build secure systems and protect digital environments from modern threats.
          </p>
          <p>
            My academic journey has given me a solid foundation in secure software design, network defense, and vulnerability assessment. Through hands-on projects, I've explored cryptographic systems, web application security, and threat mitigation, sparking my curiosity about how systems work and how to make them more resilient.
          </p>
        </article>
      </section>

      <section class="animate-fade-up">
        <h5 class="font-semibold text-black dark:text-white mb-3">
          Currently Working On
        </h5>
        <article>
          <p>
            Actively pursuing the HTB Certified Penetration Testing Specialist (HTB CPTS) certification to prepare for the OSCP exam, as the exam formats are similar. Currently working on a Hackathon project with my teammate for Cursor Hackathon Malaysia on November 29, 2025.
          </p>
        </article>
      </section>

      <section id="skills" class="animate-fade-up space-y-6">
        <h5 class="font-semibold text-black dark:text-white">
          Skills & Technologies
        </h5>
        <div class="space-y-6 stagger-animate">
          {Object.entries(skillsByCategory).map(([category, skills]) => (
            <div>
              <h6 class="text-sm font-medium opacity-75 mb-2">{category}</h6>
              <div class="flex flex-wrap gap-2">
                {skills.map(skill => (
                  <span class="px-3 py-1 bg-black/5 dark:bg-white/5 rounded-full text-sm hover-lift">
                    {skill.data.name} <span class="opacity-75">({skill.data.level})</span>
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </section>

      <section id="education" class="animate-fade-up space-y-6">
        <h5 class="font-semibold text-black dark:text-white">
          Education
        </h5>
        <ul class="flex flex-col space-y-4 stagger-animate">
          {education.map(entry => (
            <li class="hover-lift">
              <div class="text-sm opacity-75">
                {dateRange(entry.data.startDate, entry.data.endDate)}
              </div>
              <div class="font-semibold text-black dark:text-white">
                {entry.data.school}
              </div>
              <div class="text-sm opacity-75">
                {entry.data.degree} in {entry.data.field}
              </div>
              {entry.data.description && (
                <div class="text-sm mt-1">
                  {entry.data.description}
                </div>
              )}
            </li>
          ))}
        </ul>
      </section>

      <section id="certifications" class="animate-fade-up space-y-6">
        <h5 class="font-semibold text-black dark:text-white">
          Certifications
        </h5>
        <ul class="flex flex-col space-y-4 stagger-animate">
          {certifications.map(cert => (
            <li class="hover-lift">
              <div class="flex gap-2 items-center mb-1 flex-wrap">
                <div class="text-sm opacity-75">
                  {new Date(cert.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long' })}
                </div>
                {cert.data.status && cert.data.status.includes("In Progress") && (
                  <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-blue-500/20 text-blue-600 dark:bg-blue-500/30 dark:text-blue-400">
                    In Progress
                  </span>
                )}
              </div>
              {cert.data.status && cert.data.status.includes("Expected completion") && (
                <div class="text-xs opacity-70 italic">
                  Expected completion: End of 2025
                </div>
              )}
              <div class="font-semibold text-black dark:text-white">
                {cert.data.name}
              </div>
              <div class="text-sm opacity-75">
                {cert.data.issuer}
              </div>
              {cert.data.link && (
                <div class="text-sm mt-1">
                  <Link href={cert.data.link} external class="hover-lift">
                    View Certificate
                  </Link>
                </div>
              )}
              {cert.data.description && (
                <div class="text-sm mt-1 opacity-90">
                  {cert.data.description}
                </div>
              )}
            </li>
          ))}
        </ul>
      </section>

      <section class="animate-fade-up space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            Work Experience
          </h5>
          <Link href="/work" class="hover-lift">
            See all work
          </Link>
        </div>
        <ul class="flex flex-col space-y-4 stagger-animate">
          {work.map(entry => (
            <li class="hover-lift">
              <div class="text-sm opacity-75">
                {dateRange(entry.data.dateStart, entry.data.dateEnd)}
              </div>
              <div class="font-semibold text-black dark:text-white">
                {entry.data.company}
              </div>
              <div class="text-sm opacity-75">
                {entry.data.role}
              </div>
              <article>
                <entry.Content />
              </article>
            </li>
          ))}
        </ul>
      </section>

      <section class="animate-fade-up space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            Recent projects
          </h5>
          <Link href="/projects" class="hover-lift">
            See all projects
          </Link>
        </div>
        <ul class="flex flex-col gap-4 stagger-animate">
          {projects.map(project => (
            <li class="hover-scale">
              <ArrowCard entry={project} />
            </li>
          ))}
        </ul>
      </section>

      <section class="animate-fade-up space-y-4">
        <h5 class="font-semibold text-black dark:text-white">
          Let's Connect
        </h5>
        <article>
          <p>
            If you want to get in touch with me about something or just to say hi,
            reach out on social media or send me an email.
          </p>
        </article>
        <ul class="flex flex-wrap gap-2 stagger-animate">
          {SOCIALS.map(SOCIAL => (
            <li class="flex gap-x-2 text-nowrap">
              <Link href={SOCIAL.HREF} external aria-label={`${SITE.NAME} on ${SOCIAL.NAME}`} class="hover-lift">
                {SOCIAL.NAME}
              </Link>
              {"/"}
            </li>
          ))}
          <li class="line-clamp-1">
            <Link href={`mailto:${SITE.EMAIL}`} aria-label={`Email ${SITE.NAME}`} class="hover-lift">
              {SITE.EMAIL}
            </Link>
          </li>
        </ul>
      </section>
    </div>
  </Container>
</PageLayout>
